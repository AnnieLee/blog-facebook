<%= render "layouts/user-card" %>
<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <% @books.each do |book| %>
      <div class="row">
        <div class="col-xs-2">
          <%= image_tag(book["picture"]["data"]["url"]) %>
        </div>
        <div class="col-xs-10">
          <%= book["name"] %><br/>
          <%= book["written_by"] %>
        </div>
      </div>
    <% end %>
  </div>
</div>
